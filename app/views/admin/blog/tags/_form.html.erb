<%= form.text_field :name %>
<%= form.check_box :is_category %>

<% if defined?(ComfortableMexicanSofa) %>
  <%= form.simple_field nil, nil, :class => 'submit_element' do %>
    <% if @tag.is_category %>
      <%= form.submit @tag.new_record?? t('comfy_blog.create_category') : t('comfy_blog.update_category'), :disable_builder => true %>
    <% else %>
      <%= form.submit @tag.new_record?? t('comfy_blog.create_tag') : t('comfy_blog.update_tag'), :disable_builder => true %>
    <% end %>
  <% end %>
  
<% else %>
  <% if @tag.is_category %>
    <%= form.submit @tag.new_record?? t('comfy_blog.create_category') : t('comfy_blog.update_category') %>
  <% else %>
    <%= form.submit @tag.new_record?? t('comfy_blog.create_tag') : t('comfy_blog.update_tag') %>
  <% end %>
<% end %>

