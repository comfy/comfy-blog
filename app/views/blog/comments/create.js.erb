<% if @comment.new_record? %>
  $('form#comment').replaceWith('<%= escape_javascript(render(:partial => "form")) %>');
<% else %>
  $('form#comment')[0].reset();
  <% if @comment.is_published? %>
    $('#comments').append('<%= escape_javascript(render(:partial => "comment", :object => @comment)) %>');
  <% end %>
<% end %>
